{% render 'partials/head.liquid', title: 'Watchlist' %}

<section class="standard-banner secondary-background width-top-btm">
    {% render 'partials/breadcrumbs.liquid', breadcrumb_title: 'Watchlist', breadcrumb_url: '/watchlist' %}

    <h1>Watchlist</h1>
    <p>Lorem ipsum odor amet, consectetuer adipiscing elit. Enim ipsum non egestas; primis luctus cubilia. Donec ut
        venenatis.</p>
</section>

<section class="watchlist width-top-btm">
    <h2>Watch later</h2>
    <div class="divider width"></div>

    {% if error %}
    <div class="fallback-webinars">
        <img src="/assets/error-icon.svg" alt="Error Icon">
        <p>Er is een fout opgetreden bij het laden van je webinars. Ga terug naar alle webinars.</p>
        <a class="green-link" href="/webinars">Webinars</a>
    </div>

    {% elsif webinars and webinars.size > 0 %}
    {% render 'partials/webinar-card.liquid', webinars: webinars, watchlistIds: watchlistIds %}
    {% else %}

    <div class="fallback-webinars">
        <img src="/assets/no-webinars-icon.svg" alt="No Webinars Icon">
        <p>Er zijn geen webinars toegevoegd aan je watchlist. Ga naar webinars om een webinar aan
            je
            watchlist toe te voegen.</p>
        <a class="green-link" href="/webinars">Webinars</a>
    </div>
    {% endif %}
</section>

{% render 'partials/foot.liquid' %}